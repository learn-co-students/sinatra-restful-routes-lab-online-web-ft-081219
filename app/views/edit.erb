<h1>Edit <%= @recipe.name %>:</h1>
<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Title:</label>
  <input type="text" name="name" id="name" placeholder="<%= @recipe.name %>">
  <label for="ingredients">Ingredients:</label>
  <input type="text" name="ingredients" id="ingredients" placeholder="<%= @recipe.ingredients %>">
  <label for="cook_time">Cook Time:</label>
  <input type="text" name="cook_time" id="cook_time" placeholder="<%= @recipe.cook_time %>">
  <input type="submit" value="edit">
</form>